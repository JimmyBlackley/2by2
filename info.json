{
  "keyboard_name": "2by2",
    "manufacturer": "Elias Sj\u00f6green",
    "url": "https://github.com/eliassjogreen/2by2",
    "maintainer": "eliassjogreen",
    "bootloader": "rp2040",
    "diode_direction": "ROW2COL",
    "features": {
        "bootmagic": true,
        "nkro": true
    },
    "matrix_pins": {
        "cols": ["GP2", "GP3"],
        "rows": ["GP5", "GP8"]
    },
    "layout_aliases": {
        "LAYOUT": "LAYOUT_horizontal"
    },
    "layouts": {
        "LAYOUT_horizontal": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1}
              ]
        }
    }
}
